<doctrine-mapping>
    <entity name="B2b\Json\Infrastructure\Persistence\Doctrine\Entity\Reward" table="reward">
        <id name="id" type="guid" />
        <field name="saleDate" type="datetime"/>
        <field name="client" type="string" length="300" />
        <field name="product" type="string" length="300" />
        <field name="paid" type="float" nullable="true" />
        <field name="toPay" type="float" nullable="true" />
        <field name="incident" type="string" length="300" nullable="true" />
        <field name="createdAt" type="datetime" />
        <field name="updatedAt" type="datetime" />
    </entity>
</doctrine-mapping>